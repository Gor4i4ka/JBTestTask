<idea-plugin>
    <id>com.ktpsi.KotlinPsi</id>
    <name>KTPSI</name>
    <vendor email="" url="">NoBrains</vendor>

    <description><![CDATA[
    The plugin allows users to generate DSL-style builders for instantiating Kotlin data
    classes. DSL builders should be generated by data classes from the user project. The
    user may choose for which data classes one wants to generate builders.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
<!--        <localInspection-->
<!--                implementationClass="dslStyle.dataClassBuilderInspection.DataClassInspection"-->
<!--                language="kotlin"-->
<!--                level="WARNING"-->
<!--                enabledByDefault="true"-->
<!--                displayName="Data class builder inspection"-->
<!--            />-->
        <localInspection
                implementationClass="dslStyle.builderUsagesInspection.BuilderUsagesInspection"
                language="kotlin"
                level="WARNING"
                enabledByDefault="true"
                displayName="Builder usages inspection"
                />
        <!-- Add your extensions here -->
    </extensions>

</idea-plugin>